<%= form_for :tag, url: categories_path do |f| %>

  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2>
        Error prohibited this tag from being saved:
      </h2>
      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :Tag_value %><br>
    <%= f.text_field :value %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<%= link_to 'Main Page', controller: 'categories' %>
<% end %>
