<h1> Add new Article </h1> 

<%= form_for ([@tags, @category, @category.articles.build]) do |f|%>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :tags %><br>
    <%= collection_check_boxes(:tag, :tag_ids, Tag.all, :id, :value) :tag %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>

